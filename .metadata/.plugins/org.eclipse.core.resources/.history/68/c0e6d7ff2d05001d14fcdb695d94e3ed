package jdbcProject;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class DbManager {
	public static void main(String[] args) throws InterruptedException {

		// 1.Driver 로드
		try {
			Class.forName("org.mariadb.jdbc.Driver");
			System.out.println("드라이브로드 성공");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		// 2.Connection 객체를 생성하기
		Connection con = null;
		PreparedStatement pstmt = null;

		String url = "jdbc:mariadb://172.0.0.1:3306/tps?characterEncoding=utf8&autoReconnect=true\r\n";
		String name = "kaaham";
		String pw = "123";

		try {
			con = DriverManager.getConnection(url, name, pw);
			System.out.println("db 연결 성공");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		// 3.생성한 Connection 객체로 DataBase 연결하기
		// 4.쿼리 전송하기
		// 5.결과출력
	}

	public void test() {
	}
}
